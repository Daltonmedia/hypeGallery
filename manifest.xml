<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">

	<name>hypeGallery</name>
	<version>2.0.1.1</version>

	<description>Photo Gallery Plugin for Elgg</description>
	<category>hypeJunction</category>
	<category>gallery</category>
	<category>media</category>

	<author>Ismayil Khayredinov (ismayil.khayredinov@gmail.com)</author>
    <website>http://hypeJunction.com</website>
    <copyright>2011-2014 (c) Ismayil Khayredinov</copyright>
    <license>GNU Public License version 2</license>

	<requires>
        <type>elgg_release</type>
		<version>1.8</version>
    </requires>
	
	<suggests>
		<type>php_extension</type>
		<name>exif</name>
	</suggests>

	<screenshot>
		<description>Upload workflow</description>
		<path>screenshots/upload.jpg</path>
	</screenshot>
	<screenshot>
		<description>Album management workflow</description>
		<path>screenshots/managealbum.jpg</path>
	</screenshot>
	<screenshot>
		<description>Activity stream entry</description>
		<path>screenshots/river.png</path>
	</screenshot>
	<screenshot>
		<description>Slideshow</description>
		<path>screenshots/slideshow.jpg</path>
	</screenshot>
	<screenshot>
		<description>Thumbnail cropping</description>
		<path>screenshots/tagger.png</path>
	</screenshot>
	<screenshot>
		<description>Photo tagging</description>
		<path>screenshots/tagging.jpg</path>
	</screenshot>
</plugin_manifest>
